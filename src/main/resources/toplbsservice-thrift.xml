<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 ">

 <!--config-->
<bean id="mtThriftPoolConfig" class="com.meituan.service.mobile.mtthrift.client.pool.MTThriftPoolConfig">
 <property name="maxActive" value="100"/>
<property name="maxIdle" value="20"/>
<property name="minIdle" value="1"/>
<property name="maxWait" value="3000"/>
<property name="testOnBorrow" value="true"/>
 <property name="testOnReturn" value="false"/>
<property name="testWhileIdle" value="false"/>
</bean>

<!--TopLbsService模块-->
 <bean id="toplbsservice-client" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
<property name="mtThriftPoolConfig" ref="mtThriftPoolConfig"/>

<!-- 直连方式，设置clusterManager的value="DIRECT" 、设置serverIpPorts对应要测试机器+端口-->
<property name="clusterManager" value="DIRECT"/>
<property name="serverIpPorts" value="10.20.94.135:9411"/>
<!-- service接口名 -->
<property name="serviceInterface" value="com.travel.top.lbs.client.service.TopLbsService"/>
<!-- thrift rpc 超时时间（毫秒）, 可不配置,默认10000毫秒 -->
 <property name="timeout" value="2000"/>
 </bean>
</beans>
